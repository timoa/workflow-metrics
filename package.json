{
	"name": "workflow-metrics",
	"private": true,
	"version": "0.1.3",
	"type": "module",
	"description": "Open-source dashboard for GitHub Actions metrics with AI-powered optimization",
	"keywords": [
		"github-actions",
		"metrics",
		"dashboard",
		"svelte",
		"analytics"
	],
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"deploy": "pnpm run build && pnpm exec wrangler pages deploy .svelte-kit/cloudflare --project-name=workflow-metrics",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@ai-sdk/mistral": "^2.0.28",
		"@fortawesome/fontawesome-free": "^7.2.0",
		"@octokit/rest": "^21.1.1",
		"@supabase/ssr": "^0.5.0",
		"@supabase/supabase-js": "^2.49.4",
		"@xyflow/svelte": "^1.5.1",
		"ai": "^5.0.141",
		"dompurify": "^3.3.1",
		"highlight.js": "^11.11.1",
		"layerchart": "^1.0.13",
		"marked": "^17.0.3",
		"yaml": "^2.8.2",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@sveltejs/adapter-cloudflare": "^7.2.8",
		"@sveltejs/kit": "^2.53.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.8",
		"@vitest/coverage-v8": "^3.0.0",
		"bits-ui": "^1.3.18",
		"clsx": "^2.1.1",
		"eslint": "^9.26.0",
		"eslint-plugin-svelte": "^3.7.0",
		"globals": "^16.1.0",
		"lucide-svelte": "^0.511.0",
		"mode-watcher": "^0.5.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"sharp": "^0.34.5",
		"svelte": "^5.53.5",
		"svelte-check": "^4.3.6",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.1.8",
		"tailwindcss-animate": "^1.0.7",
		"tw-animate-css": "^1.2.9",
		"typescript": "~5.9.0",
		"typescript-eslint": "^8.56.1",
		"vite": "^6.2.6",
		"vitest": "^3.0.0",
		"wrangler": "^4.69.0"
	},
	"pnpm": {
		"auditConfig": {
			"ignoreGhsas": [
				"GHSA-3ppc-4f35-3m26"
			]
		},
		"overrides": {
			"cookie": "^0.7.0"
		}
	}
}
